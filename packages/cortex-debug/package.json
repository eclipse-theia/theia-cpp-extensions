{
  "name": "@theia/cortex-debug",
  "version": "0.7.0",
  "description": "Theia - Cortex Debug Extension",
  "dependencies": {
    "@theia/debug": "next"
  },
  "publishConfig": {
    "access": "public"
  },
  "theiaExtensions": [
    {
      "backend": "lib/node/debug-cortex-backend-module"
    }
  ],
  "keywords": [
    "theia-extension, debug, cortex"
  ],
  "license": "EPL-2.0 OR GPL-2.0 WITH Classpath-exception-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/eclipse/theia-cpp-extension.git"
  },
  "bugs": {
    "url": "https://github.com/eclipse/theia-cpp-extension/issues"
  },
  "homepage": "https://github.com/eclipse/theia-cpp-extension",
  "files": [
    "lib",
    "src",
    "scripts"
  ],
  "scripts": {
    "postinstall": "node -e \"require('@theia/debug/bin/download-adapters.js')\"",
    "prepare": "yarn run clean && yarn run build",
    "download": "download-debug-adapters",
    "clean": "theiaext clean",
    "build": "theiaext build",
    "watch": "theiaext watch",
    "test": "theiaext test",
    "test:watch": "theiaext test:watch"
  },
  "devDependencies": {
    "rimraf": "^2.6.2",
    "tar": "^4.0.0",
    "unzip-stream": "^0.3.0",
    "zlib": "^1.0.5",
    "@theia/ext-scripts": "^0.12.0"
  },
  "adapters": {
    "cortex-debug": "https://github.com/Marus/cortex-debug/releases/download/V0.2.7/cortex-debug-0.2.7.vsix"
  }
}
